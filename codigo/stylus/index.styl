#productos
	display none
	+desde( escritorio )
		display inherit

	.titulo
		text-align center
		font-family "Fontin"
		font-weight bold
		font-size ( 35 / 16 )rem
		color azul


	.marquesina
		margin 2rem

		.slick-prev,
		.slick-next
			font-size 0
			line-height 0
			position absolute
			top 50%
			display block
			width 2rem
			height 60px
			padding 0
			transform translate(0, -50%)
			cursor pointer
			color transparent
			border none
			outline none
			background-color transparent
			background-position center
			background-repeat no-repeat
			z-index 1

		.slick-prev
			left -2rem
			background-image url( "../img/chevron-izquierda.png" )

		.slick-next
			right -2rem
			background-image url( "../img/chevron-derecha.png" )

		.item
			display block
			padding 0.5rem
			box-sizing border-box

			.imagen
				display block
				position relative

