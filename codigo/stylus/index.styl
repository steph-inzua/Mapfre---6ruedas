@require "base/utiles"
@require "nib"
@require "animations"

#portada
	.carrusel
		margin 0 auto

		.item
			display block
			position relative

			.imagen
				width 100%
				display block
			.txt
				color red1
				background rgba(255,255,255,.9)
				padding 15px 13px 0 13px
				position absolute
				top 22%
				z-index 1
				right 0
				left 0
				margin 0 20px
				text-align center
				
				+desde( escritorio )
					right 200px
					left inherit
					padding 21px 35px 0 35px
					
				.esquina
					content ''
					position relative
					background url('../img/icons/arrow-box.png') right top no-repeat
					height 24px
					display block
					bottom -24px
					margin-right -10px
					background-size contain
					+desde( escritorio )
						height 40px
						bottom -40px
						margin-right -30px
					
					
					
				h2
					font-family Rockwell
					font-size (19.16 / 16)rem
					line-height normal
					+desde( escritorio )
						font-size (38.34 / 16)rem
					span
						display block
						font-size (21.91 / 16)rem
						text-transform uppercase
						font-weight bold
						letter-spacing 0.12rem
						+desde( escritorio )
							font-size (43.84 / 16)rem

		.slick-dots
			absolute bottom left right
			display flex
			justify-content center
			align-items center

			li
				margin-bottom 10px
				button
					display block
					width 15px
					height 15px
					background-color blanco
					border 3px solid blanco
					border-radius 50%
					margin 5px
					padding 0
					font-size 0
					line-height 0
					overflow hidden
					box-sizing border-box
					cursor pointer
					outline none
					color transparent

				&.slick-active
					button
						background-color #de1a22
						width 23px
						height 23px



